doctype html
html
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width")
    link(href="/css/site.css", rel="stylesheet")
    block title
      title= "*snowthorn (esoterica)"
  body
    header
      h1 
        a(href="/", class="homelink") <sup>*</sup>
        = post.title.toLowerCase()
        | .
      h3= post.date.toDateString()
                
    .content
      p!= post.content